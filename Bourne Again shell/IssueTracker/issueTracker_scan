#!/bin/bash

usage="ERROR! \nUsage: issueTracker_scan (findbugs|clone) <commit_id> \n ERROR"

# if no args specified, show usage
if [ $# -le 1 ]; then
  echo -e $usage
  exit 1
fi

baseDir="$ISSUETRACKER_HOME/bin"

option=$1
commit_id=$2
ip="10.141.221.80"
port="8003"
projectId=`cat $baseDir/project`
commitId=$2
token=`cat $baseDir/authentication`
case $option in

  (findbugs)
   #post
        curl -H "Content-Type:application/json" -H "token:$token" -X POST -d '{"projectId": "'$projectId'", "commitId":"'$commitId'"}' http://$ip:$port/scan -s | grep -Po 'msg[":]+\K[^"]+'
        ;;
  (clone)
   # need to be done
    echo -e "\nNothing\n"
    ;;

  (*)
        echo -e "No option $1"
    echo -e $usage
    exit 1
    ;;

esac
